      <script>
        var mapContainer = document.getElementById('map'),
            mapOption = { 
                center: new kakao.maps.LatLng(positions[0].latlng.getLat(), positions[0].latlng.getLng()), // 지도의 중심좌표
                level: 4 // 지도의 확대 레벨
            };

        var kakaomap = new kakao.maps.Map(mapContainer, mapOption);

        // 마커 추가
        var currentInfowindow = null;

        for (var i = 0; i < positions.length; i++) {
        var marker = new kakao.maps.Marker({
            map: kakaomap,
            position: positions[i].latlng
        });
 
        var iwContent = '<div class="cafe_title">' + positions[i].title + '</div>',
            iwPosition = positions[i].latlng;

        var infowindow = new kakao.maps.InfoWindow({
            position: iwPosition,
            content: iwContent
        });

        kakao.maps.event.addListener(marker, 'click', (function(marker, infowindow) {
            return function() {
            // 열려있는 인포윈도우 닫음
            if (currentInfowindow) {
                currentInfowindow.close();
            }

            // 클릭한 마커의 인포윈도우 열기
            infowindow.open(kakaomap, marker);

            // 현재 열려있는 인포윈도우 업데이트
            currentInfowindow = infowindow;
            };
        })(marker, infowindow));
        }

      </script>
