                <%}%>
                <% var edit = data1.edit %>
                <%if(edit == '1'){%>
                    <span><a href="/community"><button class="del_bt" onclick="deleteData()">삭제</button></a></span>
                <%}%>              
                <span><a href="/community"><button class="list_bt">목록</button></a></span>
            </span>


        </div>

