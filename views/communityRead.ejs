    <% var list = data[0] %>
    <div class="container">
        <div class="write_box">
            <div class="title_box">
                <span class="title_data">
                    <%= list.title %>
                </span>
            </div>
            <!-- <input input type="submit" class="change_bt" value="수정" id="change_bt" style="display: none"> -->

            <div class="detail_box">
                <span class="detail1">
                    <span class="people_box">인원</span>
                    <span class="people_data"><%= list.people %></span>
                </span>
                <span class="detail2">
                    <span class="purpose_box">목적</span>
                    <span class="purpose_data">
                        <% if(list.purpose === 'study') { %>
                            스터디
                        <% } else if (list.purpose === 'friendship') { %>
                            친목
                        <% } else if (list.purpose === 'else'){ %>
                            기타
                        <% } %>
                    </span>
                </span>
                <span class="detail3">
                    <span class="date_box">만남 날짜</span>
                    <span class="date_data">
                        <%= list.date %>
                    </span>
                </span>
                <span class="detail4"> 
                    <span class="nickname_data"><%= list.nickname %></span>
                    <span class="writedate"><%=  list.writeTime.substring(0, 10)%></span>
                </span>
            </div>
            <hr id="detail_hr">
            <div class="content_box">
                <div class="content_data" style="white-space:pre-line;"><%= list.content %></div>
            </div>

            <span class="bt_group">               
                <% var edit = data1.edit %>
                <%if(edit == '1'){%>
